# Windows-скрипты: CRLF, без нормализации
*.bat -text
*.ps1 -text
*.cmd -text
system/lang/*.env text eol=lf

# Windows-документы: CRLF
*.md  text eol=crlf

# Unix-скрипты и конфиги: LF
*.sh   text eol=lf
*.conf text eol=lf
*.yaml text eol=lf
*.yml  text eol=lf
*.json text eol=lf
*.mdc  text eol=lf
Dockerfile text eol=lf
.dockerignore text eol=lf

# Специальные файлы без расширения
profiles/personal.flag text eol=lf

# Архивы и большие файлы (без обработки текста!)
*.zip filter=lfs diff=lfs merge=lfs -text
*.zst filter=lfs diff=lfs merge=lfs -text
*.tar filter=lfs diff=lfs merge=lfs -text
*.gz  filter=lfs diff=lfs merge=lfs -text
*.bin filter=lfs diff=lfs merge=lfs -text
*.7z  filter=lfs diff=lfs merge=lfs -text